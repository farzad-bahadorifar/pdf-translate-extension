{
    "manifest_version": 3,
    "name": "PDF Translator",
    "version": "1.0",
    "description": "Translate selected text in PDF files.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "content_scripts": [
      {
        "matches": ["*://*/*.pdf"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    }
  }
  